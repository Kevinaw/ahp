<Window x:Class="ahp.WindowCombinations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ahp"
        mc:Ignorable="d"
        Title="WindowCombinations" Icon="small logo.ico" d:DesignWidth="600" Loaded="Window_Loaded" MinHeight="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto" BorderBrush="#FF8CA6C9" BorderThickness="1">
            <Grid Name="GrdContent">
                
            </Grid>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0, 20, 0, 0">
            <Button Name="BtnApply" Click="BtnApply_Click" Content="Apply" Padding="10" Margin="0" IsDefault="True"></Button>
            <Button Name="BtnCancel" Click="BtnCancel_Click" Content="Cancel" Padding="10" Margin="40,0,0,0" IsCancel="True"></Button>
        </StackPanel>
    </Grid>
</Window>
