<Window x:Class="ahp.WindowProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ahp"
        mc:Ignorable="d"
        Title="Calculation Progress" Height="100" Width="300" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" Icon="small logo.ico">
    <Grid x:Name="grid" Margin="20">
        <ProgressBar Name="PrgBar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="{Binding ActualHeight, ElementName=grid, Mode=OneWay}" Width="{Binding ActualWidth, ElementName=grid, Mode=OneWay}" Minimum="0" Maximum="100"/>
        <TextBlock Name="TxbValue" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
