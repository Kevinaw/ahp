<UserControl x:Class="MyNumericUpDownControll.NumericUpDown "
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyNumericUpDownControll"
             mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderThickness="1" BorderBrush="Gray" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <!--Bind the TextBlock to the Value property-->
                <TextBlock Name="TxbValue"  TextAlignment="Right" Padding="8" Background="White"/>

            </Border>
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Button Name="BtnUp" Content="+" Width="20" Click="BtnUp_Click"></Button>
                <Button Name="BtnDown" Content="-" Width="20" Click="BtnDown_Click"></Button>
            </StackPanel>

    </Grid>
</UserControl>
