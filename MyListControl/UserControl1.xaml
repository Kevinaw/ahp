<UserControl x:Class="MyListControl.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyListControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Focusable="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="addBtnCr" Grid.Row="0" Content="" Margin="3" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="22" Cursor="Hand" Height="22" ToolTip="add new alternative" Click="addBtn_Click">
            <Button.Background>
                <ImageBrush ImageSource="./Resources/add.png"/>
            </Button.Background>
        </Button>
        <ListBox Name="contentLbx" Grid.Row="1" Margin="3" SelectionChanged="contentLbx_SelectionChanged" Padding="10">
        </ListBox>
    </Grid>
</UserControl>
